<div class="container">
  <h1>Create New Task</h1>

    <%= form_for(@task) do |f| %>
      <%= f.label :title, class: "form-label"%>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :details, class: "form-label" %>
      <%= f.text_field :details, class: "form-control" %>
      <%= f.submit "Submit", class:"btn btn-primary mt-3"%>
    <% end %>

  <div class="action-buttons">
    <i class="fas fa-undo-alt"></i> <%= link_to "Back to list", tasks_path %>
  </div>
</div>
