<div class="container">
  <h1><%= @task.title %></h1>

  <div class="card mb-3">
    <div class="card-body">
      <%= @task.details %>
    </div>
  </div>

  <div>
    <% if @task.completed %>
      <i class="far fa-check-square"></i> <%=  "This task is completed" %>
    <% else %>
      <i class="far fa-square"></i> <%= "This task has not been completed" %>
    <% end %>
  </div>

  <div class="action-buttons">
    <i class="far fa-edit"></i> <%= link_to "Edit task", edit_task_path %>
    <br>
    <i class="fas fa-undo-alt"></i> <%= link_to "Back to list", tasks_path %>
  </div>
</div>
