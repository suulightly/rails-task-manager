<div class="container">
  <h1>Update Task: <%= @task.title %></h1>

  <%= form_for(@task) do |f| %>
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :details, class: "form-label" %>
    <%= f.text_field :details, class: "form-control" %>
    <div class="form-check my-2">
      <%= f.check_box :completed, class: "form-check-input" %>
      <%= f.label :completed, class: "form-label" %>
    </div>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <% end %>

  <div class="action-buttons">
    <i class="fas fa-undo-alt"></i> <%= link_to "Back to list", tasks_path %>
  </div>
</div>
