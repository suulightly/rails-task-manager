<div class="container">
  <h1>My Tasks</h1>

  <% @tasks.each do |task| %>
    <ul>
      <li><% if task.completed %>
              <i class="far fa-check-square"></i> <%= link_to task.title, task_path(task) %> |
            <% else %>
              <i class="far fa-square"></i> <%= link_to task.title, task_path(task) %> |
            <% end %>
          <%= link_to task_path(task),
            method: :delete,
            data: { confirm: "Delete #{task.title}?" } do %>
              <i class="far fa-trash-alt"></i>
          <% end %>
      </li>
    </ul>
  <% end %>

  <div class="action-buttons" style="color: blue;">
    <i class="fas fa-plus"></i> <%= link_to "Add a new task", new_task_path %>
  </div>
</div>
